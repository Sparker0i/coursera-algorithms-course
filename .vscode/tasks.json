{
    "command": "g++",
    "args": [
        "${file}",
        "-o ${fileDirname}\\${fileBasenameNoExtension}.exe",
        "-std=c++11",
        "&&",
        "${fileDirname}\\${fileBasenameNoExtension}.exe"
      ],
    "isShellCommand": true,
    "showOutput": "always",
    "problemMatcher": {
        "owner": "cpp",
        "fileLocation": [
            "relative",
            "${workspaceRoot}"
        ],
        "pattern": {
            "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
        }
}
}